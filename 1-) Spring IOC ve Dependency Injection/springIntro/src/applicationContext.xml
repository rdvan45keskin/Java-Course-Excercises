<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:values.properties"/><!-- dosyadaki değerleri okuduk -->
	<bean id="database" class="springIntro.MsSqlCustomerDal"><!-- database isteyen yere class değerini yolla -->
		<property name="connectionString" value="${database.connectionString}"/> <!-- database çalışırken connection string görünen değere dosyadaki belirtilen değerin karşılığını yaz -->
	</bean>
	<bean id="service" class="springIntro.CustomerManager">
		<constructor-arg ref="database"/> <!-- yukarıdaki databaseyi parametre olarak verdik -->
<!-- 		<property name="customerDal" ref="database"></property>setter customerDal kullanıyosa database referans ver -->
	</bean>
	
</beans>
